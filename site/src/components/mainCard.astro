---
const { title = "ECollAct", subtitle = "L'action collective pour un air plus clair.", description = "Projet en cours de construction" } = Astro.props;
---

<div class={`animate flex flex-col p-8 items-center justify-center bg-[var(--color-night)]/90 backdrop-blur-sm rounded-2xl shadow-2xl border border-[var(--color-olive)]/20`}>
     <h1 class="text-[var(--color-stone)] text-4xl font-bold mb-4">{title}</h1>
     <h2 class="text-[var(--color-stone)]/90 text-2xl font-light mb-6 text-center">{subtitle}</h2>
     <p class="text-[var(--color-stone)]/80 text-lg font-light">{description}</p>
     <div class="mt-6 flex gap-3">
       <div class="w-3 h-3 bg-[var(--color-olive)] rounded-full animate-pulse"></div>
       <div class="w-3 h-3 bg-[var(--color-blue)] rounded-full animate-pulse" style="animation-delay: 0.2s;"></div>
       <div class="w-3 h-3 bg-[var(--color-orange)] rounded-full animate-pulse" style="animation-delay: 0.4s;"></div>
     </div>
 </div>

<style>
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>